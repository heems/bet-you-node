extends layout

block content
  h1 #{bet.name}
  p #{bet.description}
  br
  p Created by #{bet.created_by}
  br
  h2 Responses
  - for (var i = 0; i < responses.length; i++) {
    p
      b Link: 
      a(href=responses[i].url) #{responses[i].url}
    p Submitted by #{responses[i].user}
    br
  - }
  a(href=path)
    p Submit a new response
